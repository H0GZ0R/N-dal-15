string path = @"C:\Users\JV\data";  // Faili asukoht
string fileName = "chuck.txt";  // Faili nimi

// Loeb kõik failis olevad read massiivi
string[] lines = File.ReadAllLines(Path.Combine(path, fileName));

// Kuvab failis oleva sisu koos rea numbritega
ShowFileContent(lines);

static void ShowFileContent(string[] fileContentArray)
{
    int i = 1;  // Algväärtustame rea numbri 1-ga
    foreach (string line in fileContentArray)  // Käime kõik failist loetud read läbi
    {
        Console.WriteLine($"{i}. {line}");  // Kuvame rea numbri ja rea sisu
        i++;  // Suurendame rea numbrit ühe võrra iga tsükli järel
    }
}


