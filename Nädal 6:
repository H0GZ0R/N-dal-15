using System;

class Program
{
    static void Main(string[] args)
    {
        string[] colors = { "red", "green", "blue", "pink", "yellow" };

        // Loop through the array in reverse order
        for (int i = colors.Length - 1; i >= 0; i--)
        {
            Console.WriteLine(colors[i]);
        }
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        // Array of possible colors
        string[] colors = { "red", "green", "blue", "pink", "yellow" };

        // Create a new instance of the Random class
        Random rnd = new Random();

        // Select a random color from the array
        string randomColor = colors[rnd.Next(0, colors.Length)];

        // Output the randomly selected color
        Console.WriteLine($"You should wear {randomColor} today.");
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        string[] colors = { "red", "green", "blue", "pink", "yellow" };

        // Loop through the array in reverse order
        for (int i = colors.Length - 1; i >= 0; i--)
        {
            // Calculate the reverse index number
            int reverseIndex = colors.Length - i;

            // Output the numbered item in reverse order
            Console.WriteLine($"{reverseIndex}. {colors[i]}");
        }
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        string hello = "Hello, world!".Trim(); // Remove any leading or trailing whitespace
        int spaceCounter = 0;
        
        // Iterate through each character in the string
        for (int i = 0; i < hello.Length; i++)
        {
            // Check if the character is a whitespace
            if (char.IsWhiteSpace(hello[i]))
            {
                spaceCounter++;
            }
        }
        
        // The number of words is the number of spaces plus one
        int wordCount = spaceCounter + 1;
        Console.WriteLine($"Number of words: {wordCount}");
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        string hello = "Hello, world!";
        int counter = 0;

        // Iterate through each character in the string
        for (int i = 0; i < hello.Length; i++)
        {
            // Check if the character is either 'L' or 'l'
            if (hello[i] == 'L' || hello[i] == 'l')
            {
                counter++;
            }
        }

        // Output the count of 'L' and 'l' characters
        Console.WriteLine($"There are {counter} 'L' or 'l' characters in the string \"{hello}\"");
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        string dontPanic = "D0n'7 p4n1c";
        
        // Replace incorrect characters with the correct ones
        dontPanic = dontPanic
            .Replace('0', 'o')
            .Replace('7', 't')
            .Replace('4', 'a')
            .Replace('1', 'i');
        
        // Output the corrected phrase
        Console.WriteLine(dontPanic);
    }
}


using System;

class Program
{
    static void Main(string[] args)
    {
        string hello = "hello!";
        
        // Convert the first character to uppercase
        char upperFirstChar = char.ToUpper(hello[0]);

        // Replace the first character with its uppercase version
        hello = upperFirstChar + hello.Substring(1);

        // Output the result
        Console.WriteLine(hello);
    }
}


