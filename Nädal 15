using System;
using System.Collections.Generic;
using System.IO;

class Program
{
    static void Main()
    {
        List<Gift> myGifts = new List<Gift>();
        string[] giftsFromFile = GetDataFromFile();

        foreach (string line in giftsFromFile)
        {
            // Jagab rea tükeldamiseks
            string[] tempArray = line.Split(new char[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);

            // Eeldatakse, et failis on andmed kujul "Name Present"
            if (tempArray.Length >= 2)
            {
                // Loob Gift objekti
                Gift newGift = new Gift(tempArray[0], tempArray[1]);
                myGifts.Add(newGift);
            }
        }

        foreach (Gift giftFromList in myGifts)
        {
            Console.WriteLine($"{giftFromList.Name} wants {giftFromList.Present} for Christmas.");
        }
    }

    static string[] GetDataFromFile()
    {
        string filePath = @"C:\Users\JV\data\frozen.txt";
        string[] dataFromFile = File.ReadAllLines(filePath);
        return dataFromFile;
    }
}

class Gift
{
    string name;
    string present;

    public Gift(string _name, string _present)
    {
        name = _name;
        present = _present;
    }

    public string Name
    {
        get { return name; }
    }

    public string Present
    {
        get { return present; }
    }
}





using System;
using System.Collections.Generic;
using System.IO;

class Program
{
    static void Main()
    {
        List<Movie> myMovies = new List<Movie>();
        string[] data = GetDataFromMyFile();

        foreach (string line in data)
        {
            string[] tempArray = line.Split(new char[] { ';' }, StringSplitOptions.RemoveEmptyEntries);
            if (tempArray.Length >= 3) // Eeldame, et failis on vähemalt 3 osa (pealkiri, aasta, hinnang)
            {
                // Loome uue Movie objekti
                Movie newMovie = new Movie(tempArray[0], tempArray[1], tempArray[2]);
                myMovies.Add(newMovie);
            }
        }

        foreach (Movie movie in myMovies)
        {
            Console.WriteLine($"One of my favorite movies {movie.Title} was released in {movie.Year}. Rating: {movie.Rating}");
        }
    }

    static string[] GetDataFromMyFile()
    {
        string filePath = @"C:\Users\JV\data\movies.txt";
        return File.ReadAllLines(filePath);
    }
}

class Movie
{
    private string title;
    private string year;
    private string rating;

    // Getter for Title
    public string Title
    {
        get { return title; }
    }

    // Getter for Year
    public string Year
    {
        get { return year; }
    }

    // Getter for Rating
    public string Rating
    {
        get { return rating; }
    }

    // Constructor
    public Movie(string _title, string _year, string _rating)
    {
        title = _title;
        year = _year;
        rating = _rating;
    }
}
